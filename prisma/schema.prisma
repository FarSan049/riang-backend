generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "windows", "linux-musl"]
}

datasource db {
  provider = "postgresql"
}


model Users {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  password      String
  name          String
  role          Role      @default(USER)
  profileImage  String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

enum Role {
  USER
  ADMIN
}

model Projects {
  id          Int      @id @default(autoincrement())
  title       String
  client      String?
  description String?
  status      String   @default("draft")
  startedAt   DateTime?
  createdAt   DateTime @default(now())
}

